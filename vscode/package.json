{
  "name": "anki-notes",
  "displayName": "anki-notes",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "anki-notes",
        "aliases": [
          "Anki Notes",
          "anki-notes"
        ],
        "extensions": [
          ".note"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "anki-notes",
        "scopeName": "source.anki-notes",
        "path": "./syntaxes/anki-notes.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "anki-notes.showPreview",
        "title": "Show Preview of Anki Notes"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aradzie/anki-math-notes.git"
  },
  "dependencies": {
    "@anotes/anki-export": "*",
    "@anotes/core": "*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/vscode": "^1.102.0"
  },
  "scripts": {
    "compile": "tsc",
    "watch": "node esbuild.js --watch",
    "build": "node esbuild.js --production",
    "package": "npx @vscode/vsce package"
  }
}
